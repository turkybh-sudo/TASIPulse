# =============================================
# TasiPulse Server - Environment Variables
# =============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git

# --- Gemini AI ---
GEMINI_API_KEY=your_gemini_api_key_here

# --- X (Twitter) ---
# Get these from developer.twitter.com > Your App > Keys and Tokens
X_API_KEY=your_api_key_here
X_API_SECRET=your_api_secret_here
X_ACCESS_TOKEN=your_access_token_here
X_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# --- Instagram (Meta Graph API) ---
# Requires Facebook Business account + connected Instagram Professional account
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_USER_ID=your_instagram_user_id_here

# --- YouTube ---
# From Google Cloud Console > OAuth 2.0 Credentials
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token_here

# --- TikTok ---
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token_here

# --- Server ---
PORT=3000
# A secret token so only your Apps Script can trigger the pipeline
TRIGGER_SECRET=choose_a_random_secret_string_here
